{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LOP",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#chars"
		},
		{
			"include": "#types"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#function-calls"
		},
		{
			"include": "#identifiers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#punctuation"
		}
	],
	"repository": {
		"types": {
			"patterns": [
				{
					"comment": "Types after a colon",
					"match": "(:)\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "punctuation.separator.type.lop"
						},
						"2": {
							"name": "entity.name.type.lop"
						}
					}
				},
				{
					"comment": "Types in type/enum/extern type declarations",
					"match": "\\b(type|enum|new|extern\\s+type)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "keyword.declaration.lop"
						},
						"2": {
							"name": "entity.name.type.lop"
						}
					}
				},
				{
					"comment": "Generic types",
					"match": "(<|,)\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "punctuation.separator.lop"
						},
						"2": {
							"name": "entity.name.type.lop"
						}
					}
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.lop",
					"match": "\\b(if|else|while|return|continue|break)\\b"
				},
				{
					"name": "keyword.declaration.lop",
					"match": "\\b(enum|type|func|let|extern)\\b"
				},
				{
					"name": "keyword.other.lop",
					"match": "\\b(new|is)\\b"
				},
				{
					"name": "constant.language.lop",
					"match": "\\b(true|false|null)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.lop",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.lop",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"chars": {
			"patterns": [
				{
					"name": "string.quoted.single.lop",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.lop",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.lop",
					"match": "//.*$"
				},
				{
					"name": "comment.block.lop",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.lop",
					"match": "\\b\\d+\\b"
				}
			]
		},
		"function-calls": {
			"patterns": [
				{
					"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
					"captures": {
						"1": {
							"name": "entity.name.function.lop"
						}
					}
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.other.identifier.lop",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.comparison.lop",
					"match": "==|!=|<=|>=|<|>"
				},
				{
					"name": "keyword.operator.assignment.lop",
					"match": "="
				},
				{
					"name": "keyword.operator.arithmetic.lop",
					"match": "\\+|\\-|\\*|/"
				},
				{
					"name": "keyword.operator.logical.lop",
					"match": "&&|\\|\\||!"
				},
				{
					"name": "keyword.operator.bitwise.lop",
					"match": "&|\\|"
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.terminator.statement.lop",
					"match": ";"
				},
				{
					"name": "punctuation.separator.comma.lop",
					"match": ","
				},
				{
					"name": "punctuation.accessor.lop",
					"match": "\\."
				},
				{
					"name": "punctuation.section.block.begin.lop",
					"match": "\\{"
				},
				{
					"name": "punctuation.section.block.end.lop",
					"match": "\\}"
				},
				{
					"name": "punctuation.section.parens.begin.lop",
					"match": "\\("
				},
				{
					"name": "punctuation.section.parens.end.lop",
					"match": "\\)"
				},
				{
					"name": "punctuation.separator.type.lop",
					"match": ":"
				}
			]
		}
	},
	"scopeName": "source.lop"
}